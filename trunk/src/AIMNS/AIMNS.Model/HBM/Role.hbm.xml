<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">

    <class name="AIMNS.Model.Role, AIMNS.Model" table="D_ROLE"  lazy="true">

        <!--角色ID-->
        <id name="RoleId" column="rol_id" type="System.String">
            <generator class="assigned"/>
        </id>

        <!--角色名-->
        <property name="RoleName" column="rol_name"  type="System.String"  length="20" />

        <bag name="PermissionList" cascade="none" inverse="true">
            <key column="role_id"/>
            <one-to-many class="AIMNS.Model.Role,AIMNS.Model" />
        </bag>
        
    </class>

</hibernate-mapping>

